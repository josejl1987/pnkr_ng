---
Checks: >
  -*,
  bugprone-*,
  cert-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  portability-*,
  readability-*,
  -cppcoreguidelines-pro-bounds-pointer-arithmetic,
  -cppcoreguidelines-pro-type-union-access,
  -modernize-use-trailing-return-type,
  -readability-magic-numbers

WarningsAsErrors: '*'

# Regex fixes:
# 1. Use single quotes to treat it as a raw string (avoids needing double backslashes for everything).
# 2. 'pnkr' was missing from your path (based on your previous query).
# 3. Ensure the regex matches the full path, so start with .* if necessary or match absolute paths.
HeaderFilterRegex: '.*f(engine|samples)/.*'

CheckOptions:
  # Class / Struct / Typedef / Enum
  readability-identifier-naming.ClassCase: CamelCase
  readability-identifier-naming.StructCase: CamelCase
  readability-identifier-naming.TypedefCase: CamelCase
  readability-identifier-naming.EnumCase: CamelCase
  readability-identifier-naming.EnumConstantCase: CamelCase

  # Functions & Variables
  readability-identifier-naming.FunctionCase: camelBack
  readability-identifier-naming.VariableCase: camelBack
  readability-identifier-naming.ParameterCase: camelBack

  # Members (m_ prefix)
  readability-identifier-naming.MemberCase: camelBack
  readability-identifier-naming.MemberPrefix: m_

  # Globals
  readability-identifier-naming.GlobalConstantCase: UPPER_CASE
...
